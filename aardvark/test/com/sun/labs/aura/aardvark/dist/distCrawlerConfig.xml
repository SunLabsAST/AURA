<config>
    
    
    <!-- A component registry that will serve the component classes -->
    <component name="registry" type="com.sun.labs.util.props.ComponentRegistry">
        <propertylist name="groupList">
            <item>Aura</item>
        </propertylist>
    </component>
    
    <component name="itemStore" type="com.sun.labs.aura.aardvark.store.ItemStore"/>
    
    <component name="feedCrawler" type="com.sun.labs.aura.aardvark.impl.crawler.SimpleFeedCrawler">
        <property name="itemStore" value="itemStore"/>
        <property name="minimumFeedDelayInMinutes" value="0"/>
        <property name="testMode" value="true"/>
    </component>
    
</config>
