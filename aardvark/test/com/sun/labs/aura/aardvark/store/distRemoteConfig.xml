<?xml version="1.0" encoding="UTF-8"?>
<config>
    <property name="auraHome" value="/aura"/>
    
    <!-- A component registry that will serve the component classes -->
    <component name="registry" type="com.sun.labs.util.props.ComponentRegistry">
        <propertylist name="groupList">
            <item>Aura</item>
        </propertylist>
        <property name="securityPolicy" value="${auraHome}/dist/jsk-all.policy"/>
    </component>
    
    <!-- An item store that can be sent to a service registrar for use by others. -->
    <component name="itemStore" type="com.sun.labs.aura.aardvark.store.SimpleItemStore" />
</config>
