<?xml version="1.0" encoding="UTF-8"?>
<config>
    <property name="auraHome" value="/aura"/>
    <property name="csPort" value="4444"/>
    
    <!-- A component registry that will serve the component classes -->
    <component name="registry" type="com.sun.labs.util.props.ComponentRegistry">
        <propertylist name="groupList">
            <item>Aura</item>
        </propertylist>
        <property name="csDirs" value="${auraHome}/dist/lib"/>
        <property name="csPort" value="${csPort}"/>
        <propertylist name="codebaseJars">
            <item>aardvark.jar</item>
            <item>LabsUtil.jar</item>
        </propertylist>
        <property name="securityPolicy" value="${auraHome}/dist/jsk-all.policy"/>

    </component>
    
    <component name="dataStoreStarter" type="com.sun.labs.aura.aardvark.AardvarkServiceStarter">
        <propertylist name="serviceComponents">
            <item>dataStore</item>
        </propertylist>
    </component>
    
    
    <!-- An item store that can be sent to a service registrar for use by others. -->
    <component name="dataStore" type="com.sun.labs.aura.aardvark.impl.store.bdb.BerkeleyItemStore" export="true" lease="100000">
        <property name="dbEnv" value="${auraHome}/dataStore.db"/>
        <property name="overwrite" value="true"/>
    </component>
</config>
