<config>

 <property name="auraHome" value="/tmp/aura"/>


 <component name="aardvark" type="com.sun.labs.aura.aardvark.Aardvark">
    <property name="itemStore" value="itemStore"/>
    <property name="feedCrawler" value="feedCrawler"/>
    <property name="recommenderManager" value="recommenderManager"/>
 </component>

<component name="itemStore" type="com.sun.labs.aura.aardvark.impl.bdb.store.BerkeleyItemStore">
    <property name="dbEnv" value="${auraHome}/itemStore.db"/>
</component>
    
<component name="feedCrawler" type="com.sun.labs.aura.aardvark.crawler.FeedCrawler">
    <property name="userRefreshManager" value="userRefreshManager"/>
    <property name="itemStore" value="itemStore"/>
</component>

<component name="userRefreshManager" type="com.sun.labs.aura.aardvark.crawler.UserRefreshManager">
    <property name="userRefreshTime" value="1000"/>  <!-- for testing read feed every second -->
    <property name="itemStore" value="itemStore"/>
</component>

<component name="recommenderManager" type="com.sun.labs.aura.aardvark.impl.recommender.SimpleRecommendationManager">
    <property name="itemStore" value="itemStore"/>
</component>

</config>
