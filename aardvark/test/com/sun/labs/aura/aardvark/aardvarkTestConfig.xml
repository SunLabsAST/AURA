<config>

    <component name="aardvarkStarter" type="com.sun.labs.aura.aardvark.AardvarkServiceStarter">
        <propertylist name="serviceComponents">
            <item>itemStore</item>
            <item>feedCrawler</item>
            <item>recommenderManager</item>
            <item>aardvark</item>
        </propertylist>
    </component>
    
    <component name="aardvark" type="com.sun.labs.aura.aardvark.impl.AardvarkImpl">
        <property name="itemStore" value="itemStore"/>
        <property name="feedCrawler" value="feedCrawler"/>
        <property name="recommenderManager" value="recommenderManager"/>
    </component>
    
    <component name="itemStore" type="com.sun.labs.aura.aardvark.impl.bdb.store.BerkeleyItemStore">
        <property name="dbEnv" value="/tmp/aura/itemStore.db"/>
        <property name="overwrite" value="true"/>
    </component>
    
    
    <component name="feedCrawler" type="com.sun.labs.aura.aardvark.impl.crawler.SimpleFeedCrawler">
        <property name="itemStore" value="itemStore"/>
        <property name="minimumFeedDelayInMinutes" value="0"/>
        <property name="testMode" value="true"/>
    </component>
    
    <component name="recommenderManager" type="com.sun.labs.aura.aardvark.impl.recommender.SimpleRecommenderManager">
        <property name="itemStore" value="itemStore"/>
    </component>
    
</config>
