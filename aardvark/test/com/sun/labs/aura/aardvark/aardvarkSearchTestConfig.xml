<config>
    <property name="auraHome" value="/tmp/aura"/>

    <property name="indexDir" value="/tmp/aardvarkSearchTestEntryContent.idx"/>
    
    <component name="aardvark" type="com.sun.labs.aura.aardvark.Aardvark">
        <property name="itemStore" value="itemStore"/>
        <property name="feedCrawler" value="feedCrawler"/>
        <property name="recommenderManager" value="searchRecommenderManager"/>
    </component>
    
    <component name="itemStore" type="com.sun.labs.aura.aardvark.impl.bdb.store.BerkeleyItemStore">
        <property name="dbEnv" value="${auraHome}/itemStore.db"/>
        <property name="overwrite" value="true"/>
    </component>
    
    
    <component name="feedCrawler" type="com.sun.labs.aura.aardvark.crawler.FeedManager">
        <property name="feedRefreshManager" value="feedRefreshManager"/>
        <property name="itemStore" value="itemStore"/>
    </component>
    
    <component name="feedRefreshManager" type="com.sun.labs.aura.aardvark.crawler.FeedRefreshManager">
        <property name="itemStore" value="itemStore"/>
        <property name="minimumFeedDelayInMinutes" value="1"/>
    </component>
    
    <component name="searchRecommenderManager" type="com.sun.labs.aura.aardvark.impl.recommender.SearchRecommenderManager">
        <property name="entryEngine" value="entryContentEngine"/>
    </component>
    
    <component name="entryContentEngine" type="com.sun.labs.aura.aardvark.impl.recommender.EntryContentEngine">
        <property name="itemStore" value="itemStore"/>
        <property name="entryBatchSize" value="5"/>
        <property name="indexDir" value="${indexDir}"/>
    </component>
    
</config>
