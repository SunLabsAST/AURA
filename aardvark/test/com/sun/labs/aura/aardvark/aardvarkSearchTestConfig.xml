<config>
    <property name="auraHome" value="/tmp/aura"/>
    <property name="indexDir" value="/tmp/aardvarkSearchTestEntryContent.idx"/>
    
   <component name="aardvarkStarter" type="com.sun.labs.aura.aardvark.AardvarkServiceStarter">
        <propertylist name="serviceComponents">
            <item>dataStore</item>
            <item>feedCrawler</item>
            <item>searchRecommenderManager</item>
            <item>aardvark</item>
        </propertylist>
    </component>
    
    <component name="aardvark" type="com.sun.labs.aura.aardvark.impl.AardvarkImpl">
        <property name="dataStore" value="dataStore"/>
        <property name="feedCrawler" value="feedCrawler"/>
        <property name="recommenderManager" value="searchRecommenderManager"/>
    </component>
    
    <component name="dataStore" type="com.sun.labs.aura.aardvark.impl.bdb.store.BerkeleyItemStore">
        <property name="dbEnv" value="/tmp/aura/dataStore.db"/>
        <property name="overwrite" value="true"/>
    </component>
    
    
    <component name="feedCrawler" type="com.sun.labs.aura.aardvark.impl.crawler.SimpleFeedCrawler">
        <property name="dataStore" value="dataStore"/>
        <property name="minimumFeedDelayInMinutes" value="1"/>
        <property name="validateOnAdd" value="false"/>
        <property name="testMode" value="true"/>
    </component>
    
    
    <component name="searchRecommenderManager" type="com.sun.labs.aura.aardvark.impl.recommender.SearchRecommenderManager">
        <property name="entryEngine" value="entryContentEngine"/>
    </component>
    
    <component name="entryContentEngine" type="com.sun.labs.aura.aardvark.impl.recommender.EntryContentEngine">
        <property name="engineConfigFile" value="entryEngineSyncConfig.xml"/>
        <property name="dataStore" value="dataStore"/>
        <property name="entryBatchSize" value="1"/>
        <property name="engineLogLevel" value="1"/>
        <property name="indexDir" value="${indexDir}"/>
    </component>
    
</config>
