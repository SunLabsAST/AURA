<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : aardvarkConfig.xml
    Created on : November 2, 2007, 4:25 PM
    Description:
        A configuration for the feed crawler.  This configuration assumes:
        
        1. The jar files needed by aardvark are available in /aura/lib
        2. A Jini service registrar is running somewhere that a multicast 
        discovery can find it.
        3. The item store has been registered in
        the service registry.
        4. The JVM that is used to start Aardvark has the correct 
        java.rmi.codebase property,  i.e., it points to the same place that the
        class server in the component registry points.
        
        You can override the global properties auraHome and csPort by specifying
        them on the JVM command line with -D
-->

<config>

    <!-- Where the aura data lives -->
    <property name="auraHome" value="/aura"/>
    
    <!-- Where the aura distribution jar was unpacked. -->
    <property name="auraDistDir" value="${auraHome}/dist"/>

    <property name="csPort" value="3333"/>
    
    <component name="crawlerStarter" type="com.sun.labs.aura.aardvark.AardvarkServiceStarter">
        <propertylist name="serviceComponents">
            <item>feedCrawler</item>
        </propertylist>
    </component>
    
    <!-- A component registry that will serve the component classes -->
    <component name="registry" type="com.sun.labs.util.props.ComponentRegistry">
        <propertylist name="groupList">
            <item>Aura</item>
        </propertylist>
        <property name="csDirs" value="${auraDistDir}/lib"/>
        <property name="csPort" value="${csPort}"/>
        <propertylist name="codebaseJars">
            <item>aardvark.jar</item>
            <item>LabsUtil.jar</item>
        </propertylist>
        <property name="securityPolicy" value="${auraDistDir}/jsk-all.policy"/>
    </component>
    
    <component name="feedCrawler" type="com.sun.labs.aura.aardvark.impl.crawler.SimpleFeedCrawler" export="true">
        <property name="itemStore" value="itemStore"/>
        <property name="minimumFeedDelayInMinutes" value="60"/>
        <property name="validateOnAdd" value="false"/>
        <property name="crawlingThreads" value="10"/>
    </component>
    
    <component name="itemStore" type="com.sun.labs.aura.aardvark.store.ItemStore"/>
    
</config>
