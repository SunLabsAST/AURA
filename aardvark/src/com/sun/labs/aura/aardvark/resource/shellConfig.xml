<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : aardvarkConfig.xml
    Created on : November 2, 2007, 4:25 PM
    Description:
        A configuration for aardvark that assumes that the various pieces needed
        for Aardvark are running on different machines and available via a Jini
        service registrar.  Preconditions for using this configuration:
        
        1. The jar files needed by aardvark are available in /aura/lib
        2. A Jini service registrar is running somewhere that a multicast 
        discovery can find it.
        3. The item store and the recommender manager have been registered in
        the service registry.
        4. The JVM that is used to start Aardvark has the correct 
        java.rmi.codebaseproperty,  i.e., it points to the same place that the
        class server in the component registry points.
-->
<!-- woah - this is out of date and needs to be adapted to use the latest set
     of components -->
     
<config>
    
    <property name="auraHome" value="/aura"/>

    <property name="auraGroup" value="Aura"/>
    
    <!-- Where the aura distribution jar was unpacked. -->
    <property name="auraDistDir" value="${auraHome}/dist"/>

    <!-- A component registry that we can use to get things. -->
    <component name="registry" type="com.sun.labs.util.props.ComponentRegistry">
        <propertylist name="groupList">
            <item>${auraGroup}</item>
        </propertylist>
        <property name="securityPolicy" value="${auraDistDir}/jsk-all.policy"/>
    </component>
    
    <component name="shell" type="com.sun.labs.aura.aardvark.util.AardvarkShell">
        <property name="dataStore" value="dataStore"/>
        <property name="aardvark" value="aardvark"/>
        <property name="statService" value="statService"/>
    </component>

    <component name="aardvark" type="com.sun.labs.aura.aardvark.Aardvark"/>
    
    <component name="dataStore" type="com.sun.labs.aura.datastore.DataStore"/>
    
    <component name="statService" type="com.sun.labs.aura.util.StatService"/>
    
     <component name="shellStarter" type="com.sun.labs.aura.AuraServiceStarter">
        <propertylist name="serviceComponents">
            <item>shell</item>
        </propertylist>
    </component>

</config>
