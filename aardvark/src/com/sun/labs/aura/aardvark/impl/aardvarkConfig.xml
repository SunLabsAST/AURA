<config>

    <!-- this doesn't work the way you think it does -->
    <property name="auraHome" value="/aura"/>
    
    <property name="indexDir" value="/aura/entryContent.idx"/>
    
    <property name="aardvarkStarter" type="com.sun.labs.aura.aardvark.AardvarkServiceStarter">
        <propertylist name="serviceComponents">
            <item>itemStore</item>
            <item>feedCrawler</item>
            <item>recommenderManager</item>
            <item>aardvark</item>
        </propertylist>
    </property>
    
    <component name="aardvark" type="com.sun.labs.aura.aardvark.impl.AardvarkImpl">
        <property name="itemStore" value="itemStore"/>
        <property name="feedCrawler" value="feedCrawler"/>
        <property name="recommenderManager" value="searchRecommenderManager"/>
        <property name="autoEnrollTestFeeds" value="true"/>
        <property name="autoEnrollMegaTestFeeds" value="true"/>
    </component>
    
    <component name="itemStore"
            type="com.sun.labs.aura.aardvark.impl.bdb.store.BerkeleyItemStore">
        <property name="dbEnv" value="/aura/itemStore.db" />
    </component>
    
    <component name="feedCrawler" type="com.sun.labs.aura.aardvark.impl.crawler.SimpleFeedCrawler">
        <property name="itemStore" value="itemStore"/>
        <property name="minimumFeedDelayInMinutes" value="60"/>
        <property name="validateOnAdd" value="false"/>
        <property name="crawlingThreads" value="10"/>
    </component>
    
    <component name="searchRecommenderManager" type="com.sun.labs.aura.aardvark.impl.recommender.SearchRecommenderManager">
        <property name="entryEngine" value="entryContentEngine"/>
    </component>
    
    <component name="entryContentEngine" type="com.sun.labs.aura.aardvark.impl.recommender.EntryContentEngine">
        <property name="itemStore" value="itemStore"/>
        <property name="entryBatchSize" value="100"/>
        <property name="indexAtStartup" value="false"/>
        <property name="indexDir" value="${indexDir}"/>
        <property name="engineLogLevel" value="1"/>
    </component>
    
</config>
