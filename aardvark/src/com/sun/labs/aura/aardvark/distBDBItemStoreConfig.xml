<?xml version="1.0" encoding="UTF-8"?>

<!--
    Document   : distBDBItemStoreConfig.xml
    Created on : November 2, 2007, 4:25 PM
    Description:
        A configuration for a BDB based item store that can be registered with a
        Jini service registrar.
-->

<config>

    <!-- Where the aura data lives -->
    <property name="auraHome" value="/aura"/>
    
    <!-- Where the aura distribution jar was unpacked. -->
    <property name="auraDistDir" value="${auraHome}/dist"/>

    <property name="csPort" value="1111"/>
    
    <!-- What you don't see here:  a hostName global variable, which the service
    starter will set for us -->
    
    <component name="itemStoreStarter" type="com.sun.labs.aura.aardvark.AardvarkServiceStarter">
        <propertylist name="serviceComponents">
            <item>itemStore</item>
        </propertylist>
    </component>
    
    <!-- A component registry that will serve the component classes -->
    <component name="registry" type="com.sun.labs.util.props.ComponentRegistry">
        <propertylist name="groupList">
            <item>Aura</item>
        </propertylist>
        <property name="csDirs" value="${auraDistDir}/lib"/>
        <property name="csPort" value="${csPort}"/>
        <propertylist name="codebaseJars">
            <item>aardvark.jar</item>
            <item>LabsUtil.jar</item>
        </propertylist>
        <property name="securityPolicy" value="${auraDistDir}/jsk-all.policy"/>
    </component>
    
    <component name="itemStore"
            type="com.sun.labs.aura.aardvark.impl.bdb.store.BerkeleyItemStore" export="true">
        <property name="dbEnv" value="${auraHome}/itemStore.db" />
    </component>
    
</config>
