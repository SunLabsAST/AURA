#!/bin/bash

function usage {
    echo 'Usage: deployWarGF -h [-n server name] -w [war file] -p [context path]'
    echo ' server name defaults to www and war file to WME'
}

args=`getopt hn:p:w: $*`

if [ $? != 0 ]
then
    usage
    exit 2
fi

set -- $args

DIR=`dirname $0`

export NAME=www
export WARFILE=$DIR/../../WebMusicExplaura/dist/WebMusicExplaura.war
export ANT_OPTS="-Xmx512m"


for i 
do
    case "$i"
	in
	-h)
	    usage
	    exit;;
	-n)
	    NAME=$2; shift;
	    shift;;
	-p)
	    WARPATH=$2; shift;
	    shift;;
	-w)
	    WARFILE=$2; shift;
	    shift;;
    esac
done

if [ ! -e $WARFILE ] ; then
    echo $WARFILE does not exist!
    exit 2
fi

echo Deploying $FILE to $NAME

if [ ! -z "$WARPATH" ] ; then
    ant -noclasspath -Ddeployment.name=$NAME \
	-Dwar.loc=$WARFILE \
	-Dwar.path=$WARPATH \
	-f $DIR/../grid-deploy/gf.xml deploy-war
else 
    ant -noclasspath -Ddeployment.name=$NAME \
	-Dwar.loc=$WARFILE \
	-f $DIR/../grid-deploy/gf.xml deploy-war
fi
