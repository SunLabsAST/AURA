#!/bin/bash

function usage {
    echo 'Usage: deployWar -b [begin number] -c [count] -h [-n server name] -w [war file]'
    echo ' server name defaults to www, begin to 1, count to 5, and war file to WME'
}

args=`getopt b:c:hn:w: $*`

if [ $? != 0 ]
then
    usage
    exit 2
fi

set -- $args

DIR=`dirname $0`

export NAME=www
export BEGIN=1
export COUNT=5
export FILE=$DIR/../../WebMusicExplaura/dist/WebMusicExplaura.war
export ANT_OPTS="-Xmx512m"


for i 
do
    case "$i"
	in
	-h)
	    usage
	    exit;;
	-b)
	    BEGIN=$2; shift;
	    shift;;
	-c)
	    COUNT=$2; shift;
	    shift;;
	-n)
	    NAME=$2; shift;
	    shift;;
	-w)
	    FILE=$2; shift;
	    shift;;
    esac
done

WARDIR=`dirname $FILE`
WARFILE=`basename $FILE`

echo $WARDIR
echo $WARFILE

ant -Dwar.dir=$WARDIR -Dwar.file=$WARFILE -f $DIR/../grid-deploy/upload-war.xml 

if [ $? != 0 ] ; then 
    echo "Error uploading war file"
    exit 2
fi

export END=$(( $BEGIN + $COUNT ))

for (( COUNT=$BEGIN ; COUNT < $END ; COUNT++ )) ; do 
    echo Deploying $FILE to $NAME-$COUNT
    ant -Ddeployment.name=$NAME \
    	-Ddeployment.number=$COUNT -Dwar.file=$WARFILE \
    	-f $DIR/../grid-deploy/deploy-lb-war.xml 
done
