<config>

    <!-- Where the aura data lives -->
    <property name="auraInstance" value="live"/>

   <!-- A component registry that will be used to lookup and register components. -->
    <component name="registry" type="com.sun.labs.util.props.ComponentRegistry">
        <propertylist name="groupList">
            <item>${auraGroup}</item>
        </propertylist>
        <property name="securityPolicy" value="${auraPolicy}"/>
    </component>

    <component name="dataStore" type="com.sun.labs.aura.datastore.DataStore"/>

    <component name="qds" type="com.sun.labs.aura.grid.util.QueryDataStore">
        <property name="onGrid" value="false"/>
        <property name="instance" value="${auraInstance}"/>
        <property name="dataStore" value="dataStore"/>
    </component>

    <component name="qds-fs" type="com.sun.labs.aura.grid.util.QueryDataStore">
        <property name="instance" value="${auraInstance}"/>
        <property name="dataStore" value="dataStore"/>
        <propertylist name="keys">
            <item>e86ab653-bec8-46f3-b4b6-a1a866919ef6</item>
            <item>6fe07aa5-fec0-4eca-a456-f29bff451b04</item>
        </propertylist>
        <propertylist name="queries"/>
    </component>

    <component name="rfs" type="com.sun.labs.aura.grid.util.RunFindSimilars">
        <property name="onGrid" value="false"/>
        <property name="instance" value="${auraInstance}"/>
        <property name="dataStore" value="dataStore"/>
    </component>

    <component name="start-qds" type="com.sun.labs.aura.AuraServiceStarter">
        <propertylist name="serviceComponents">
            <item>qds</item>
        </propertylist>
        <property name="blockForShutdown" value="false"/>
    </component>

    <component name="start-qds-fs" type="com.sun.labs.aura.AuraServiceStarter">
        <propertylist name="serviceComponents">
            <item>qds-fs</item>
        </propertylist>
        <property name="blockForShutdown" value="false"/>
    </component>

    <component name="start-rfs" type="com.sun.labs.aura.AuraServiceStarter">
        <propertylist name="serviceComponents">
            <item>rfs</item>
        </propertylist>
        <property name="blockForShutdown" value="false"/>
    </component>

</config>
