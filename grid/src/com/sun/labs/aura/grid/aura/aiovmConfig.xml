<?xml version="1.0" encoding="ISO-8859-1"?>

<!--
    Document   : startAura.xml
    Created on : May 20, 2008, 10:25 AM
    Author     : stgreen
    Description:
        Configuration for the AuraStart grid script.
-->
<config>
    
    <property name="auraInstance" value="live"/>
    
    <property name="logLevel" value="FINE"/>
    
    <component name="startAIOVM" type="com.sun.labs.aura.grid.aura.StartAIOVM">
        <property name="instance" value="${auraInstance}"/>
    </component>
    
    <component name="stopAIOVM" type="com.sun.labs.aura.grid.aura.StopAIOVM">
        <property name="instance" value="${auraInstance}"/>
    </component>
    
    <component name="aiovm-start" type="com.sun.labs.aura.AuraServiceStarter">
        <propertylist name="serviceComponents">
            <item>startAIOVM</item>
        </propertylist>
        <property name="blockForShutdown" value="false"/>
    </component>
    
    <component name="aiovm-stop" type="com.sun.labs.aura.AuraServiceStarter">
        <propertylist name="serviceComponents">
            <item>stopAIOVM</item>
        </propertylist>
        <property name="blockForShutdown" value="false"/>
    </component>
</config>