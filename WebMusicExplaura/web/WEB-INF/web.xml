<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>WebMusicExplaura</display-name>
    <filter>
        <filter-name>ImageExpiresFilter</filter-name>
        <filter-class>com.sun.labs.aura.music.wsitm.server.ImageExpiresFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ImageExpiresFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>Connect to WebMusicExplaura</description>
        <listener-class>com.sun.labs.aura.music.wsitm.server.ServletListener</listener-class>
    </listener>
    <listener>
        <description>HttpSessionListener</description>
        <listener-class>com.sun.labs.aura.music.wsitm.server.SessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>MusicSearchInterface</servlet-name>
        <servlet-class>com.sun.labs.aura.music.wsitm.server.MusicSearchInterfaceImpl</servlet-class>
        <init-param>
            <param-name>cacheSize</param-name>
            <param-value>5000</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.sun.labs.aura.music.wsitm.server.OpenIDServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MusicPlayer</servlet-name>
        <servlet-class>com.sun.labs.aura.music.wsitm.server.MusicPlayer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MusicSearchInterface</servlet-name>
        <url-pattern>/com.sun.labs.aura.music.wsitm.WebMusicExplaura/musicsearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MusicPlayer</servlet-name>
        <url-pattern>/MusicPlayer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>welcomeGWT.html</welcome-file>
    </welcome-file-list>
