<?xml version="1.0" encoding="UTF-8"?>

<config>
    <!-- Where the aura data lives by default -->
    <property name="auraHome" value="/aura"/>

    <!-- Location of the JINI security policy -->
    <property name="auraPolicy" value="/aura/dist/jsk-all.policy"/>

    <!-- A component registry that will be used to lookup and register components. -->
    <component name="registry" type="com.sun.labs.util.props.ComponentRegistry">
        <propertylist name="groupList">
            <item>Aura</item>
            <item>AuraJeff</item>
            <item>AuraHome</item>
        </propertylist>
        <property name="securityPolicy" value="${auraPolicy}"/>
    </component>
    
    <!-- Find an existing datastorehead -->
    <component name="dataStoreHead" type="com.sun.labs.aura.datastore.DataStore"/>

    <!-- Find an existing stat service -->
    <component name="statService" type="com.sun.labs.aura.util.StatService"/>
    
    <!-- Use them as parameters to the shell service -->
    <component name="auraShell" type="com.sun.labs.aura.util.AuraShell">
        <property name="dataStoreHead" value="dataStoreHead"/>
        <property name="statService" value="statService"/>
    </component>
    
    <component name="starter" type="com.sun.labs.aura.AuraServiceStarter">
        <propertylist name="serviceComponents">
            <item>auraShell</item>
        </propertylist>
    </component>
</config>
